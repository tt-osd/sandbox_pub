<div class="header_search" id="sports-page-header">   
			<div class="tile-grid">
          <h2>{{ dc 'homepage_welcome'}}</h2>
        	{{search submit=false instant=settings.instant_search}}
      </div>
</div>
<nav class="sub-nav">
   <div class="container">
    {{breadcrumbs}}
   </div>
</nav>

<header class="page-header">
    <div class="section-container container">
        <h1>{{section.name}}</h1>
      <div class="section-search">
          {{#if settings.show_follow_section}}
            {{subscribe}}
          {{/if}}
      </div>
    </div>
</header>
<div class="section-body">
	<section class="section-content">
      {{#if section.articles}}
        <ul class="article-list">
          {{#each section.articles}}
            <li class="article-list-item section-article {{#if promoted}} article-promoted{{/if}}">
              <div class="container">
              {{#if promoted}}
                <span data-title="{{t 'promoted'}}" class="icon-star"></span>
              {{/if}}
              <a href="{{url}}" class="article-list-link">{{title}}</a>
              {{#if internal}}
                <span class="icon-lock" title="{{t 'internal'}}"></span>
              {{/if}}
                  </div>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <i class="section-empty">
          <a href="{{section.url}}">{{t 'empty'}}</a>
        </i>
      {{/if}}       
    	{{pagination}}

           <div class="form_block" id="golf_form_block">
  			  		<div class="form_img">
    				  	<img src="{{asset 'golf_icon.png'}}">
 			  			</div>
  		  			<div class="form_text">
   			  			 <h3 class="form_link_title">{{dc 'form_title_-_golf_form'}}</h3>
  			  		</div>  
  		  				<a class="form_link button" href="{{dc 'golf_form_link'}}"></a>
  				</div>

    </section>  
  </div>