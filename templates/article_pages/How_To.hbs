<div class="ht-body" id="How_to">
  <div class="header_search">   
			<div class="container">
          <h2>{{ dc 'homepage_welcome'}}</h2>
        	{{search  instant=settings.instant_search scoped=true}}
      </div>
</div>
  <nav class="sub-nav">
    <div class="container">
      {{breadcrumbs}}
    </div>
  </nav>

    <article class="ht-article">
      <div class="container">
      <header class="ht-article-header">
			<h1 title="{{article.title}}" class="ht-article-title">
			  {{article.title}}
			  {{#if article.internal}}
				<span class="icon-lock" title="{{t 'internal'}}"></span>
			  {{/if}}
			</h1>
		  </header>
      </div>

      <section class="article-info">
		<div class="container">
		<div class="article-content">
		  <div class="ht-article-body">{{article.body}}</div>
		</div>
		</div>
      </section>

<footer>       
        {{#with article}}
          <div class="article-votes">
            <span class="article-votes-question">{{t 'was_this_article_helpful'}}</span>
            <div class="article-votes-controls" role='radiogroup'>
              <div class="article-vote-seperate" id="article-vote-up-select"> </div>
              {{vote 'up' role='radio' class='article-vote article-vote-up'}}
              	<div class="article-vote-divide"> | </div>
              <div class="article-vote-seperate" id="article-vote-down-select"> </div>
              {{vote 'down' role='radio' class='article-vote article-vote-down'}}
            </div>
            <small class=" zd_Hidden article-votes-count">
              {{vote 'label' class='article-vote-label'}}
            </small>
          </div>
        {{/with}} 
         </footer>
    </article>
  </div>

