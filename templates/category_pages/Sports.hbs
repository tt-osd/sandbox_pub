<div class="header_search" id="sports-page-header">   
			<div class="tile-grid">
          <h2>{{ dc 'homepage_welcome'}}</h2>
        	{{search submit=false instant=settings.instant_search scoped=true}}
      </div>
</div>
<nav class="sub-nav">
   <div class="container">
    {{breadcrumbs}}
   </div>
  </nav>
  <header class="page-header">
      <div class="container category-container">	
        <h1>{{category.name}}</h1>
      </div>
    </header>
<div class="category-body">
<div class="container">
  <div class="category-container">
    <div class="category-content">      
       <div class="section-tree">
        {{#each sections}}
          <section class="section">
            <h2 class="section-tree-title">
              <a href="{{url}}">{{name}}</a>
            </h2>
            {{#if articles}}
              <ul class="article-list">
                {{#each articles}}
                  <li class="article-list-item{{#if promoted}} article-promoted{{/if}}">
                    {{#if promoted}}
                      <span data-title="{{t 'promoted'}}" class="icon-star"></span>
                    {{/if}}
                    <a href="{{url}}" class="article-list-link">{{title}}</a>
                    {{#if internal}}
                      <span class="icon-lock" title="{{t 'internal'}}"></span>
                    {{/if}}
                  </li>
                {{/each}}
              </ul>
              {{#if more_articles}}
                <a href="{{url}}" class="see-all-articles button">
                  {{t 'show_all_articles' count=article_count}}
                </a>
              {{/if}}
            {{/if}}
          </section>
        {{else}}
          <i class="category-empty">
            <a href="{{category.url}}">{{t 'empty'}}</a>
          </i>
        {{/each}}
         <section id="important_section_block" class="section">
            <h2 class="section-tree-title">
              {{dc 'category_sports_important_title'}}
            </h2>            
              <p class="extra_block">
                {{dc 'category_sports_important_paragraph'}}
              </p>              
              <a href="{{dc 'category_sports_important_button_1_link'}}" class="button button-white">
                  {{dc 'category_sports_important_button_1'}}
              </a> 
              <a href="{{dc 'category_sports_important_button_2_link'}}" class="button button-white">
                  {{dc 'category_sports_important_button_2'}}
              </a>       
          </section>
      </div>
         <div class="form_block">
            <div class="form_img">
           	   <img src="{{asset 'strap_icon.jpg'}}">
            </div>
            <div class="form_text">
             	 <h3 class="form_link_title">{{dc 'form_title_-_strap_request'}}</h3>
            </div>  
        	  <a class="form_link button" href="{{dc 'strap_form_link'}}"></a>
        </div>
    </div>
  </div>
</div>
</div>
