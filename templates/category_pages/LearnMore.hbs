<div class="header_search" id="learn-page-header">   
			<div class="container">
          <h2>{{ dc 'homepage_welcome'}}</h2>
        	{{search  instant=settings.instant_search scoped=true}}
      </div>
</div>
<nav class="sub-nav">
   <div class="container">
    {{breadcrumbs}}
   </div>
  </nav>
    <header class="page-header">
      <div class="container category-container">	
        <h1>{{category.name}}</h1>
      </div>
    </header>
<div class="category-body">
<div class="container">
  <div class="category-container">
    <div class="category-content">      
       <div class="section-tree">
        {{#each sections}}
          <section class="section">
            <h2 class="section-tree-title">
              <a href="{{url}}">{{name}}</a>
            </h2>
            {{#if articles}}
              <ul class="article-list">
                {{#each articles}}
                  <li class="article-list-item{{#if promoted}} article-promoted{{/if}}">
                    {{#if promoted}}
                      <span data-title="{{t 'promoted'}}" class="icon-star"></span>
                    {{/if}}
                    <a href="{{url}}" class="article-list-link">{{title}}</a>
                    {{#if internal}}
                      <span class="icon-lock" title="{{t 'internal'}}"></span>
                    {{/if}}
                  </li>
                {{/each}}
              </ul>
              {{#if more_articles}}
                <a href="{{url}}" class="see-all-articles button">
                  {{t 'show_all_articles' count=article_count}}
                </a>
              {{/if}}
            {{/if}}
          </section>
        {{else}}
          <i class="category-empty">
            <a href="{{category.url}}">{{t 'empty'}}</a>
          </i>
        {{/each}}
       </div>
    </div>
  </div>
</div>
</div> 
